<div class="main">
    <div class="content">
        
        <div class="random-beer">
            <div class="random-box">
                <img class="imagen-cerveza-random" src="{{randomBeer.image_url}}" alt="">
            </div>

            <div class="random-box">
                <h3>Name : {{randomBeer.name}}</h3>
                <p>{{randomBeer.tagline}}</p>
                <p>{{randomBeer.description}}</p>
                <p><strong>Food Pairing:</strong></p>
                {{#each randomBeer.food_pairing}}
                <li>{{this }}</li>
                {{/each}}
                <p><strong>Brewer Tips: </strong>{{randomBeer.brewers_tips}}</p>
            </div>   
        </div>
    </div>  
</div>

